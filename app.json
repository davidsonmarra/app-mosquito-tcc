{
  "expo": {
    "name": "mosquito-camera",
    "slug": "mosquito-camera",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/ic_launcher_google_play.png",
    "scheme": "mosquitocamera",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Precisamos de acesso à câmera para tirar fotos de possíveis focos do mosquito da dengue.",
        "NSPhotoLibraryUsageDescription": "Precisamos de acesso à galeria para selecionar fotos de possíveis focos do mosquito da dengue.",
        "NSLocationWhenInUseUsageDescription": "Precisamos de acesso à localização para registrar onde a foto foi tirada.",
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        }
      },
      "bundleIdentifier": "com.anonymous.mosquitocamera"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/ic_launcher_google_play.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES"
      ],
      "package": "com.anonymous.mosquitocamera"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-dev-client",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/ic_launcher_google_play.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Precisamos de acesso à câmera para tirar fotos de possíveis focos do mosquito da dengue."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Precisamos de acesso à galeria para selecionar fotos de possíveis focos do mosquito da dengue."
        }
      ],
      "expo-web-browser",
      "expo-font"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
